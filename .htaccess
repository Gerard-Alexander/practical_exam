# -------------------------------
# 1. Authentication
# -------------------------------
AuthType Basic
AuthName "Restricted Area"
AuthUserFile "C:/wamp64/www/practical_exam/.htpasswd"
Require valid-user

# -------------------------------
# 2. Cache Control
# -------------------------------
<IfModule mod_headers.c>
  <FilesMatch "\.(html|jpg|pdf|xml|json|js|css)$">
    Header set Cache-Control "no-cache"
  </FilesMatch>
</IfModule>

