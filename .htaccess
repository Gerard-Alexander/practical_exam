# -------------------------------
# 3. Compression (gzip/deflate)
# -------------------------------
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/xml application/pdf text/plain
</IfModule>

# -------------------------------
# 4. Content Negotiation
# -------------------------------
AddLanguage es .es
AddLanguage fil .fil

# -------------------------------
# 5. Conditional Requests
# -------------------------------
FileETag MTime Size
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>

# -------------------------------
# 6. Range Requests
# -------------------------------
<IfModule mod_headers.c>
  Header set Accept-Ranges "bytes"
</IfModule>
